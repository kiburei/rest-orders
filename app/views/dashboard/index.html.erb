<div class="row">
  <div class="col s4">
    <div class="card browns">
      <h4><%= @orders.count %> Orders</h4>
      <h5><%= number_to_currency(@orders.sum(:order_cost), unit: 'KES ') %></h5>
    </div>
  </div>
  <div class="col s4">
    <div class="card reds">
      <h4><%= @orders.where(status: true).count %> Paid Orders</h4>
      <h5><%= number_to_currency(@orders.where(status: true).sum(:order_cost), unit: "KES ") %></h5>
    </div>
  </div>
  <div class="col s4">
    <div class="card khakis">
      <h5><%= @transactions.count %> Transactions</h5>
      <h4><%= number_to_currency(@transactions.sum(:transaction_amount), unit: "KES ") %></h4>
    </div>
  </div>
</div>

<!-- Tables -->
  <h1>Orders</h1>
  <table class="table striped">
    <thead>
      <th>Order ID</th>
      <th>Order Items</th>
      <th>Table No.</th>
      <th>Order Total</th>
      <th>Payment</th>
      <td>Status</td>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.order_id %></td>
          <td><button class="btn blue" onclick="order_items(<%= order.order_id %>)">See Order Items(<%= order.order_items.count %>)</button>
            <div id="order_items<%= order.order_id %>" style="display: none">
              <% order.order_items.each do |item| %>
              <li><%= item.menu.item_name %>   <span style="float: right"><%= number_to_currency(item.menu.item_cost, unit: "KES ") %></span> </li>
              <% end %>
              <button class="btn red" onclick="xorder(<%= order.order_id %>)">close</button>
            </div>
          </td>
          <td><%= order.table_no %></td>
          <td><%= number_to_currency(order.order_cost, unit: "KES ") %></td>
          <td> <button class="btn white" onclick="payments(<%= order.order_id %>)" name="button" style="color: black">(<%= order.transactions.count %>) payments</button>
            <div id="payments<%= order.order_id %>" style="display: none">
              <% order.transactions.each do |transaction| %>
                <li><%= transaction.transaction_id %> MP3S4R3F <span style="float: right"><%= number_to_currency(transaction.transaction_amount, unit: "KES ") %></span> </li>
              <% end %>
              <button class="btn red" onclick="xtransaction(<%= order.order_id %>)">close</button>
            </div>
          </td>
          <% if order.order_cost == order.transactions.sum(:transaction_amount) %>
            <td> <button class="btn green" name="button">Paid</button> </td>
          <% else %>
            <td>   <button class="btn red" name="button"><%= number_to_currency((order.order_cost - order.transactions.sum(:transaction_amount)), unit: "KES ") %></button> </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
